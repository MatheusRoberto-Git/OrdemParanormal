@using OP_RPG.Models.Account

@{
    Layout = "";
}

@model LoginModel

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ordem Paranormal - Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />
    <link rel='stylesheet' href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
</head>
<body>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-message">
            <div>
                <span asp-validation-for="Username"></span>
            </div>
            <div>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <span asp-validation-for="Mensagem"></span>
            </div>
        </div>
    }
    <div class="wrapper">
        <form asp-action="Login" method="post">
            <h1>Login</h1>
            <div class="input-box">
                <input asp-for="Username" placeholder="Nickname">
                <i class='bx bxs-user'></i>
            </div>
            <div class="input-box">
                <input asp-for="Password" placeholder="Senha">
                <i class='bx bxs-lock-alt'></i>
            </div>
            <div class="remember-forgot">
                <label>
                    <input asp-for="LembrarMe" /> @Html.DisplayNameFor(a => a.LembrarMe)
                </label>
                <a href="#">Esqueceu a senha?</a>
            </div>
            <button type="submit" class="btn">Login</button>
            <div class="register-link">
                <p>Sem acesso né Sol das 8? <a asp-action="Register">Registrar</a></p>
            </div>
        </form>
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}